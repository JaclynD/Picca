<div class="sign_up">
  <div class="heading">
    <h1><%= image_tag "logo@3x.png", :class=>"PICCA" %></h1>
    <h3>新規登録</h3>
  </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, :placeholder => 'メールアドレスを入力' %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :placeholder => 'パスワードを入力' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => 'パスワードを入力（確認）' %>
  </div>

  <div class="field">
     <%= f.label :nickname %><br />
     <%= f.text_field :nickname, autofocus: true, maxlength: "6", :placeholder => 'ニックネームを入力' %>
  </div>

  <div class="file">
    <%= f.file_field :avatar %>
  </div>

  <div class="actions">
    <%= f.submit "Create Account" %>
  </div>
<% end %>

<div class="more_link_box">
  <%= render "devise/shared/links" %>
</div>

</div>
