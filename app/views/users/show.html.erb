<div class="user_page">
  <header>
    <div class="heading">

      <div class="user_meta clearfix">
        <div class="avatar">
          <%= image_tag current_user.avatar %>
        </div>
        <div class="text">
          <div class="name">
            <p><%= current_user.nickname %></p>
          </div>
          <div class="group">
            <p>group</p>
          </div>
        </div>
      </div>

      <div class="sign_out">
        <%= link_to 'サインアウト', "/users/sign_out", method: :delete %>
      </div>
    </div>
  </header>

  <div class="contents">
    <% current_user.reviews.each do |review| %>
    <div class="container clearfix">
       <div class="avatars">
          <%= image_tag "avatar.JPG", :class=>"avatar" %>
          <div class="level"><p>属性</p></div>
        </div>

       <div class="review-box">
         <div class="date"><p><%= review.created_at %></p></div>
         <h2>NICKNAME<i class="fa fa-smile-o" aria-hidden="true"></i></h2>
         <p><%= review.text %></p>
         <p>昼：<%= review.lunch_cost %>円/人</p>
         <p>夜：<%= review.dinner_cost %>円/人</p>
         <div class="keyword"><p>落ち着いた</p></div>
         <ul class="photos clearfix">
            <li><%= image_tag "photo.jpeg" %></li>
            <li><%= image_tag "photo.jpeg" %></li>
            <li><%= image_tag "photo.jpeg" %></li>
          </ul>
         <div class="icon clearfix">
           <i class="fa fa-heart-o" aria-hidden="true"></i>
           <i class="fa fa-commenting-o" aria-hidden="true"></i>
         </div>
         <% if user_signed_in? && current_user.id == review.user_id %>
         <div class="more">
           <div class="delete">
              <%= link_to '削除', "/restaurants/#{review.restaurant_id}/reviews/#{review.id}", method: :delete %>
           </div>
           <div class="edit">
              <%= link_to '編集', "/restaurants/#{review.restaurant_id}/reviews/#{review.id}/edit", method: :get %>
           </div>
         </div>
         <% end %>
       </div>
    </div> <!-- container -->
    <% end %>
  </div>

</div>
